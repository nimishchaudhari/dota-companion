# Server Configuration
PORT=4000
NODE_ENV=development
LOG_LEVEL=debug
LOG_PRETTY=true

# JWT Configuration
JWT_SECRET=development-secret-do-not-use-in-production
JWT_EXPIRES_IN=4h
REFRESH_SECRET=refresh-secret-do-not-use-in-production
REFRESH_EXPIRES_IN=7d

# External APIs
OPENDOTA_API_KEY=your_opendota_api_key_here
OPENDOTA_BASE_URL=https://api.opendota.com/api
STRATZ_API_KEY=your_stratz_api_key_here
STRATZ_BASE_URL=https://api.stratz.com/api

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=dota_companion

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Proxy Configuration
LLM_PROXY_URL=http://localhost:4001

# GraphQL Hive Configuration
HIVE_ENABLED=false
HIVE_TOKEN=your_hive_token_here

# Steam API Configuration
STEAM_API_KEY=your_steam_api_key_here
STEAM_REALM=http://localhost:4000
STEAM_RETURN_URL=http://localhost:4000/auth/steam/return

# CORS Configuration
CORS_ORIGIN=*
